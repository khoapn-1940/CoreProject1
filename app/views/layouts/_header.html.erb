<!------ Include the above in your HEAD tag ---------->
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet"
    integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
<body class="home" style="height: 100vh;">
  <div class="container-fluid display-table">
    <div class="row display-table-row">
      <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
        <div class="logo">
          <a hef="#"><%= image_tag "1.jpg" %></a>
        </div>
        <div class="navi">
          <ul>
            <li class="active">
              <% if User.roles[session[:role]] == User.roles[:admin] %>
                <li>
                  <%= link_to root_path do %>
                    <i class="fa fa-home" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Home</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to manage_users_path do %>
                    <i class="fa fa-user"></i><span class="hidden-xs hidden-sm">Manage Users</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to view_tour_path do %>
                    <i class="fa fa-bus"></i><span class="hidden-xs hidden-sm">Manage Tours</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to view_all_booking_request_path do %>
                    <i class="fa fa-bookmark"></i><span class="hidden-xs hidden-sm">Manage Booking Requests</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to view_all_review_path do %>
                    <i class="fa fa-pencil"></i><span class="hidden-xs hidden-sm">Manage User Reviews</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to revenue_path do %>
                    <i class="fa fa-money"></i><span class="hidden-xs hidden-sm">Manage Revenue</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to view_category_path do %>
                    <i class="fa fa-list"></i><span class="hidden-xs hidden-sm">Manage Category</span>
                  <% end %>
                </li>
              <% elsif User.roles[session[:role]] == User.roles[:user] %>
                <li>
                  <%= link_to edit_user_path(current_user) do %>
                    <i class="fa fa-home" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Edit</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to view_tour_path do %>
                    <i class="fa fa-car"></i><span class="hidden-xs hidden-sm">View Tours</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to view_booking_request_path do %>
                    <i class="fa fa-home" aria-hidden="true"></i><span class="hidden-xs hidden-sm">View My Bookings</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to view_my_reviews_path do %>
                    <i class="fa fa-car"></i><span class="hidden-xs hidden-sm">View My Reviews</span>
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to signup_path do %>
                    <i class="fa fa-registered"></i><span class="hidden-xs hidden-sm">Register</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to login_path do %>
                    <i class="fa fa-sign-in"></i><span class="hidden-xs hidden-sm">Login</span>
                  <% end %>
                </li>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-md-10 col-sm-11 display-table-cell v-align">
        <!--<button type="button" class="slide-toggle">Slide Toggle</button> -->
        <div class="row">
          <header>
            <div class="col-md-7">
              <nav class="navbar-default pull-left">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas"
                                        data-target="#side-menu" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                </div>
              </nav>
              <div class="search hidden-xs hidden-sm">
                <input type="text" placeholder="Search" id="search">
              </div>
            </div>
            <div class="col-md-5">
              <div class="header-rightside">
                <ul class="list-inline header-top pull-right">
                  <li class="hidden-xs">
                    <% if !User.roles[session[:role]].nil? %>
                      <%= link_to logout_path,:class => "add-project" do %>
                        Log Out
                      <% end %>
                    <% end %>
                  </li>
                  <li><a href="#"><i class="fa fa-envelope" aria-hidden="true"></i></a></li>
                  <li>
                    <a href="#" class="icon-info">
                      <i class="fa fa-bell" aria-hidden="true"></i>
                      <span class="label label-primary">3</span>
                    </a>
                  </li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <%= image_tag "avatar.png" %>
                      <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li>
                        <div class="navbar-content">
                          <span>JS Krishna</span>
                          <p class="text-muted small">
                            me@jskrishna.com
                          </p>
                          <div class="divider">
                          </div>
                          <a href="#" class="view btn-sm active">View Profile</a>
                        </div>
                      </li>
                    </ul>
                  </li>
                </ul>
              </div>
            </div>
          </header>
        </div>
      </body>
