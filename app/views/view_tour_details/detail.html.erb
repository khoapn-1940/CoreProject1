<div class="container">
  <div class="card">
    <div class="container-fliud">
      <div class="wrapper row">
        <div class="preview col-md-6">
          <div class="preview-pic tab-content">
            <div class="tab-pane active" id="pic-1" style="padding-top: 0px;">
              <%# <img src="tour.jpg" style="width: 1000px;" /> %>
              <%= image_tag "#{@tour_detail.tour.image}",  alt: "Tour Details", class: "group list-group-image", style: "width: 1000px;" %>
            </div>
          </div>
          <ul class="preview-thumbnail nav nav-tabs">
          </ul>
        </div>
        <div class="details col-md-6" style="margin-left: 100px;">
          <h3 class="product-title"> <%= @tour_detail.tour.name %></h3>
          <div class="rating">
            <div class="stars">
              <% if @self_star.nil? %>
                <%= link_to rating_tour_path(:star => "1", :tour_id => @tour_detail.id), :remote => true do %>
                  <span class="fa fa-star"></span>
                <% end %>
                <%= link_to rating_tour_path(:star => "2", :tour_id => @tour_detail.id), :remote => true do %>
                  <span class="fa fa-star"></span>
                <% end %>
                <%= link_to rating_tour_path(:star => "3", :tour_id => @tour_detail.id), :remote => true do %>
                  <span class="fa fa-star"></span>
                <% end %>
                <%= link_to rating_tour_path(:star => "4", :tour_id => @tour_detail.id), :remote => true do %>
                  <span class="fa fa-star"></span>
                <% end %>
                <%= link_to rating_tour_path(:star => "5", :tour_id => @tour_detail.id), :remote => true do %>
                  <span class="fa fa-star"></span>
                <% end %>
              <% else %>
                <% @self_star.star.times do |star| %>
                  <span class="fa fa-star checked"></span>
                <% end %>
              <% end %>
            </div>
            <span class="review-no"><%= @tour_detail.tour.reviews.all.count %> reviews</span>
          </div>
          <p class="product-description"> <%= @tour_detail.tour.description %></p>
          <h4 class="price">current price: <span> <%= @tour_detail.price %> $ </span></h4>
          <p class="vote">Average 
            <% @star.times do |display| %>
              <span class="fa fa-star checked">
              </span>
            <% end %> of buyers enjoyed this product! <strong>(<%= @tour_detail.tour.ratings.count %> votes)</strong>
          </p>
          <h5 class="sizes">Time Start:
            <span class="size" data-toggle="tooltip" title="small"><%= @tour_detail.time_start %></span>
          </h5>
          <h5 class="sizes">Time End:&nbsp;&nbsp;&nbsp;&nbsp;
            <span class="size" data-toggle="tooltip" title="small"><%= @tour_detail.time_end %></span>
          </h5>
          <div class="action" style="display: inline-block">
            <%= form_for(@booking_tour, :url => booking_tour_path,:method => :POST, :authenticity_token => true) do |f| %>
              <%= f.text_field(:book_total, class: "add-to-cart", :placeholder => "_______", :style=>"width:70px;") %>
              <%= f.hidden_field :tour_detail_id %>
              <%= button_tag(type: "submit", class: "like btn btn-default", style: "float:left") do %>
                <span class="fa fa-heart">Booking</span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
