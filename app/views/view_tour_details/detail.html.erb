<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
<div class="container">
  <h2 class="page-header">Comments</h2>
  <%= form_for(@self_review, :url => comment_tour_path,:method => :POST, :authenticity_token => true, :remote => true) do |f| %>
    <div class="input-group">
      <%= f.text_field(:content, class: "form-control", :placeholder => "Leave a comment ", :style=>"height: 50px;")%>
      <%= f.hidden_field :tour_id %>
      <span class="input-group-addon">
        <%= button_tag(type: "submit", class: "btn btn-primary") do %>
          <i class="fa fa-edit"></i>
        <% end%>
      </span>
    </div>
  <% end%>
  <div class="col-sm-16">
    <% unless @reviews.nil? %>
      <%= will_paginate @reviews %>
      <% @reviews.each do |review| %>
        <div class="panel panel-white post panel-shadow">
          <div class="post-heading">
            <div class="pull-left image">
              <img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">
            </div>
            <div class="pull-left meta">
              <div class="title h5">
                <a href="#"><b> <%= review.user.name %> </b></a>
              </div>
              <h6 class="text-muted time"> <%= review.updated_at %></h6>
            </div>
          </div>
          <div class="post-description">
            <p> <%= review.content%> </p>
            <div class="stats">
              <% if current_user.likes.find_by(review_id: review.id).nil? %>
                <%= link_to like_a_review_path(:review_id => review.id), :class=>"btn-default stat-item", :id => "R#{review.id}L", :remote => true do %>
                  <i class="fa fa-thumbs-up icon"></i> <%= review.likes.count%>
                <% end%>
              <% else%>
                <%= link_to unlike_a_review_path(:review_id => review.id), :class=>"stat-item" ,:id => "R#{review.id}L", :remote => true do %>
                  <i class="fa fa-thumbs-up icon"></i> <%= review.likes.count%>
                <% end %>
              <%end%>
              <!-- <a href="#" class="btn btn-default stat-item">
              <i class="fa fa-share icon"></i>12
            </a> -->
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
